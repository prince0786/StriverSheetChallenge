## Find the Minimum Number of Coins

#include<bits/stdc++.h>

int findMinimumCoins(int amount) 
{
    // Write your code here
    int arr[] = {1,2,5,10,20,50,100,500,1000};
    int min_coins=0;
    for(int i=8; i>=0; i--){
        if(amount == 0) break;
        if(amount/arr[i] >= 1){
            min_coins += amount/arr[i];
            amount = amount%arr[i];
        }
    }
    return min_coins;
}
