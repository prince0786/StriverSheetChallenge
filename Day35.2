## Find the Number of Islands

#include<bits/stdc++.h>
void solve(int** arr, int n, int m, int i, int j){
    if(i<0 || j<0 || i>=n || j>=m)
        return;
    if(arr[i][j] != 1)
        return;
    arr[i][j]=0;
    solve(arr,n,m,i+1,j);
    solve(arr,n,m,i-1,j);
    solve(arr,n,m,i,j+1);
    solve(arr,n,m,i,j-1);
    solve(arr,n,m,i+1,j+1);
    solve(arr,n,m,i-1,j-1);
    solve(arr,n,m,i+1,j-1);
    solve(arr,n,m,i-1,j+1);
}

int getTotalIslands(int** arr, int n, int m)
{
   // Write your code here.
    int count=0;
    for(int i=0; i<n; i++){
        for(int j=0; j<m; j++){
            if(arr[i][j]==1){
                count++;
                solve(arr,n,m,i,j);
            }
        }
    }
    return count;
    
}
