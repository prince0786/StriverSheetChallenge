## Merge two Sorted Linked List

Node<int>* sortTwoLists(Node<int>* first, Node<int>* second)
{
    // Write your code here.
    Node<int>* temp = new Node<int>(-1);
    Node<int>* temphead = temp;
    
    while(first != NULL && second != NULL){
        if(first->data >= second->data){
            temp->next = second;
            temp = temp->next;
            second = second->next;
        }
        else{
            temp->next = first;
            temp = temp->next;
            first = first->next;
        }
    }
    if(first != NULL){
        while(first != NULL){
            temp->next = first;
            temp = temp->next;
            first = first->next;
        }
    }
    if(second != NULL){
        while(second != NULL){
            temp->next = second;
            temp = temp->next;
            second = second->next;
        }
    }
     

    return temphead->next;;
}
