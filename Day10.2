## Reverse Nodes in K groups

Node *getListAfterReverseOperation(Node *head, int n, int b[]){
	// Write your code here.
    Node *mani = new Node(0);
    mani->next = head;
    
    Node *pre = mani;
    Node *cur = mani;
    Node *nex = mani;
    
    int count = 0;
    while(cur->next != NULL){
        cur=cur->next;
        count++;
    }
    int j=0;
    while(count>0 && j<n){
        cur = pre->next;
        nex = cur->next;
        int x = (b[j]<=count) ? b[j] : count;
        if(x==0){
            j++;
            continue;
        }
        for(int i=1; i<x; i++){
            cur->next = nex->next;
            nex->next = pre->next;
            pre->next = nex;
            nex = cur->next;
        }
        pre = cur;
        count -= b[j];
        j++;
    }
    return mani->next;
    
}
