## Longest Consecutive ones

int longestSubSeg(vector<int> &arr , int n, int k){
    // Write your code here.
    int start =0;
    int maxi = 0;
    int zero = 0;
    for(int i=0; i<n; i++){
        if(arr[i] == 0){
            zero++;
        }
        if(zero > k){
            while(zero>k){
                if(arr[start] == 0){
                    zero--;
                }
                start++;
            }
        }
        maxi = max(maxi, i-start+1);
    }
    return maxi;
}
