## Left View of Binary tree

#include<bits/stdc++.h>
/************************************************************

    Following is the TreeNode class structure

    template <typename T>
    class TreeNode {
       public:
        T data;
        TreeNode<T> *left;
        TreeNode<T> *right;

        TreeNode(T data) {
            this->data = data;
            left = NULL;
            right = NULL;
        }
    };

************************************************************/
void helper(TreeNode<int>* root, int level, int &maxlevel, vector<int>&v){
    if(root == NULL) return;
    if(level>maxlevel){
        v.push_back(root->data);
        maxlevel=level;
    }
    helper(root->left, level+1, maxlevel,v);
    helper(root->right, level+1,maxlevel,v);
}
vector<int> getLeftView(TreeNode<int> *root)
{
    //    Write your code here
    int maxlevel=0;
    vector<int>v;
    helper(root,1,maxlevel,v);
    return v;
}
