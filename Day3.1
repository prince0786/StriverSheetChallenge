## Maximum Subarry Sum

#include <bits/stdc++.h> 
long long maxSubarraySum(int arr[], int n)
{
    int ans=0;
    int MAX = INT_MIN;
    for(int i=0; i<n; i++){
        ans = max(arr[i], (arr[i]+ans));
        MAX = max(ans, MAX);
        
    }
    if(MAX < 0){
        return 0;
    }
   
    return MAX;
}
