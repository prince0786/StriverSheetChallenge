## Longest Palindromic SubString

string longestPalinSubstring(string str)
{
    // Write your code here.
    int N = str.size();
    int res = 1, start = 0;
    string ans;
    
    for(int i=0; i<N; i++){
        int l = i-1;
        int r = i+1;
        
        while(l>=0 && str[i]==str[l]){
            l--;
        }
        while(r<N && str[i]==str[r]){
            r++;
        }
        while(l>=0 && r<N && str[l]==str[r]){
            l--;
            r++;
        }
        int len = (r-1)-(l+1)+1;
        if(len>res){
            res = len;
            start = l+1;
        }
    }
    ans = str.substr(start, res);
    return ans;
}
